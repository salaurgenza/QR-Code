<body>

  <h2>Generatore di QR Code</h2>
  <input type="text" id="linkInput" placeholder="Inserisci un link...">
  <button onclick="generaQRCode()">Genera</button>

  <div id="qrcode"></div>

  <!-- Libreria QRCode.js -->
  <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>

  <script>
    function generaQRCode() {
      const link = document.getElementById("linkInput").value;
      const qrcodeDiv = document.getElementById("qrcode");
      qrcodeDiv.innerHTML = ""; // Pulisce eventuali QR precedenti

      if (link.trim() !== "") {
        new QRCode(qrcodeDiv, {
          text: link,
          width: 200,
          height: 200,
        });
      } else {
        alert("Inserisci un link valido.");
      }
    }
  </script>

</body>
</html>
